# ============================================
# API Keys
# ============================================
OPENROUTER_API_KEY=your_openrouter_api_key_here  # Required: for all LLM access

# ============================================
# LangChain + OpenRouter 配置
# ============================================
OPENROUTER_BASE_URL=https://openrouter.ai/api/v1  # OpenRouter API 地址
DEFAULT_MODEL=deepseek/deepseek-v3.1-terminus  # 默认模型 (可选: anthropic/claude-3.5-sonnet, openai/gpt-4-turbo, qwen/qwen-2.5-72b-instruct)

# Database
DATABASE_URL=postgresql://user:password@localhost:5432/novel_db
# For development, you can use SQLite:
# DATABASE_URL=sqlite:///./data/sqlite/novel.db

# Vector Database
VECTOR_DB_PATH=./data/chromadb

# Novel Generation Settings
DEFAULT_NOVEL_TYPE=scifi  # scifi or xianxia
DEFAULT_PREFERENCE=hybrid  # playability, narrative, or hybrid

# Logging
LOG_LEVEL=INFO
LOG_FILE=./logs/app.log

# Development
DEBUG=false
