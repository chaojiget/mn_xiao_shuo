# ============================================
# API Keys
# ============================================
OPENROUTER_API_KEY=your_openrouter_api_key_here  # Required: for DeepSeek access

# ============================================
# Claude Agent SDK + LiteLLM Proxy 配置
# ============================================
# 使用 LiteLLM Proxy 让 Agent SDK 调用 DeepSeek
USE_LITELLM_PROXY=true
ANTHROPIC_API_BASE=http://localhost:4000  # LiteLLM Proxy 地址
ANTHROPIC_API_KEY=sk-proxy-key  # 代理模式下任意值

# 如果你有真实的 Anthropic API Key (可选)
# USE_LITELLM_PROXY=false
# ANTHROPIC_API_KEY=sk-ant-your-real-key-here

# Database
DATABASE_URL=postgresql://user:password@localhost:5432/novel_db
# For development, you can use SQLite:
# DATABASE_URL=sqlite:///./data/sqlite/novel.db

# Vector Database
VECTOR_DB_PATH=./data/chromadb

# LiteLLM
LITELLM_CONFIG_PATH=./config/litellm_config.yaml

# Novel Generation Settings
DEFAULT_NOVEL_TYPE=scifi  # scifi or xianxia
DEFAULT_PREFERENCE=hybrid  # playability, narrative, or hybrid

# Logging
LOG_LEVEL=INFO
LOG_FILE=./logs/app.log

# Development
DEBUG=false
